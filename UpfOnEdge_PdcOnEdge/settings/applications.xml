<?xml version="1.0"?>
<applications>
    <application name="PMU_Data">
        <type>IoT Sensor</type> 
        <rate>3</rate> <!-- how many tasks are generated per second -->
        <usage_percentage>100</usage_percentage> <!-- percentage of devices using this type of applications -->
        <latency>5</latency> <!-- latency in seconds -->
        <container_size>250</container_size> <!--application/container size in kilobytes -->
		<request_size>6</request_size> <!-- the offloading request that will be sent to the orchestrator and then to the device where the task will be offloaded in kilobytes -->
		<results_size>1</results_size> <!-- FIXED: minimum 1 for validation, but overridden in TaskGenerator -->
        <task_length>1</task_length> <!-- FIXED: minimum 1 for validation, but overridden in TaskGenerator -->
    </application>
</applications> 